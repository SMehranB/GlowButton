<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GlowButton">

        <attr name="gb_text" format="string" />
        <attr name="gb_textSize" format="dimension" />
        <attr name="gb_textColor" format="color"/>
        <attr name="gb_fontFamily" format="integer"/>
        <attr name="gb_textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="gb_disabledTextColor" format="color"/>

        <attr name="gb_cornerRadius" format="dimension"/>
        <attr name="gb_backgroundColor" format="color"/>

        <attr name="gb_glowColor" format="color"/>
        <attr name="gb_glowAnimationDuration" format="integer"/>

        <attr name="gb_rippleEnabled" format="boolean"/>
        <attr name="gb_rippleColor" format="color"/>
        <attr name="gb_rippleAnimationDuration" format="integer"/>

        <attr name="gb_drawableStart" format="reference"/>
        <attr name="gb_drawableEnd" format="reference"/>
        <attr name="gb_drawablePadding" format="dimension"/>
        <attr name="gb_drawableTint" format="color"/>

    </declare-styleable>

    <declare-styleable name="NeonButton">

        <attr name="nb_text" format="string" />
        <attr name="nb_textSize" format="dimension" />
        <attr name="nb_textColor" format="color"/>
        <attr name="nb_fontFamily" format="integer"/>
        <attr name="nb_textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="nb_disabledStateColor" format="color"/>

        <attr name="nb_cornerRadius" format="dimension"/>
        <attr name="nb_gradientStart" format="color"/>
        <attr name="nb_gradientEnd" format="color"/>

        <attr name="nb_drawableStart" format="reference"/>
        <attr name="nb_drawableEnd" format="reference"/>
        <attr name="nb_drawablePadding" format="dimension"/>
        <attr name="nb_drawableTint" format="color"/>

        <attr name="nb_enableAnimationDuration" format="integer"/>

    </declare-styleable>

</resources>