<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="GlowButton">

        <attr name="android:text" format="string" />
        <attr name="android:textSize" format="dimension" />
        <attr name="android:textColor" format="color"/>
        <attr name="android:fontFamily" format="integer"/>
        <attr name="android:textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>

        <attr name="gb_cornerRadius" format="dimension"/>
        <attr name="gb_backgroundColor" format="color"/>

        <attr name="gb_glowColor" format="color"/>
        <attr name="gb_glowAnimationDuration" format="integer"/>

        <attr name="gb_rippleEnabled" format="boolean"/>
        <attr name="gb_rippleColor" format="color"/>
        <attr name="gb_rippleAnimationDuration" format="integer"/>

        <attr name="android:drawableStart" format="reference"/>
        <attr name="android:drawableEnd" format="reference"/>
        <attr name="android:drawablePadding" format="dimension"/>
        <attr name="android:drawableTint" format="color"/>

    </declare-styleable>
    
</resources>